<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/TipHeadingLabel"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="332dp"
        android:layout_height="77dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tip Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="3dp" />

    <EditText
        android:id="@+id/billPlainText"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bill Amount:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="97dp" />

    <EditText
        android:id="@+id/numberInParty"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Number in party:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="97dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="144dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="310dp"
        android:layout_height="64dp"
        android:text="Outstanding Service"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="221dp" />

    <Button
        android:id="@+id/buttonCalculator"
        android:layout_width="412dp"
        android:layout_height="67dp"
        android:text="Calculator Tip"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/textViewTotalTip"
        android:layout_width="375dp"
        android:layout_height="43dp"
        android:text="Total Tip:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="407dp" />

    <TextView
        android:id="@+id/textViewTipPer"
        android:layout_width="375dp"
        android:layout_height="43dp"
        android:text="Tip per Person:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="466dp" />

</androidx.constraintlayout.widget.ConstraintLayout>